<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MobilAlkfejlProjekt" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
    </style>

    <!-- Theme for MainLoggedInActivity with action bar -->
    <style name="Theme.MobilAlkfejlProjekt.WithActionBar" parent="Theme.Material3.DayNight">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="actionBarStyle">@style/Widget.App.ActionBar</item>
    </style>

    <style name="Widget.App.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/background_light</item>
        <item name="android:background">@color/background_light</item>
    </style>

    <style name="CustomButton" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/color_primary</item>
    </style>
</resources>